    <script>
        document.getElementById('preApplicationForm').addEventListener('submit', function(event) {
            const photoInput = document.getElementById('photo');
            const fileSize = photoInput.files[0].size / 1024; // サイズをKB単位に変換
            
            if (fileSize < 10 || fileSize > 10240) { // 10KB〜10MBの範囲に制限
                alert('顔写真は10KBから10MBの範囲でアップロードしてください。');
                event.preventDefault();
            }
        });
    </script>
